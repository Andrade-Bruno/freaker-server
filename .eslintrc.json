{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "standard"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "camelcase": ["error", { "allow": [""] }],
    "prettier/prettier": 0,
    "import/default": 2,
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^[A-Z]"
      }
    ]
  }
}
